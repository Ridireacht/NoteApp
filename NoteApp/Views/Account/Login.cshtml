@model LoginViewModel

<!DOCTYPE html>
<html lang="en">

	<head>
		<meta charset="UTF-8">
		<meta http-equiv="X-UA-Compatible" content="IE=edge">
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<title>BCH notes</title>
		<link rel="stylesheet" type="text/css" href="~/css/styles.css">
		<link rel="apple-touch-icon" sizes="180x180" href="~/favicon/apple-touch-icon.png">
		<link rel="icon" type="image/png" sizes="32x32" href="~/favicon/favicon-32x32.png">
		<link rel="icon" type="image/png" sizes="16x16" href="~/favicon/favicon-16x16.png">
		<link rel="manifest" href="~/favicon/site.webmanifest">
	</head>

	<body>
		<div class="mestoform2">
			<div class="bord2">
				<form asp-controller="Account" asp-action="Login" id='register-form' method="post">
					<input type="hidden" asp-for="ReturnUrl" />
					<input asp-for="Username" type="text" placeholder="Логин" required>
					<input asp-for="Password" type="password" id="password-input" placeholder="Пароль" required name="pwd1">
					<div class="Knopki">
						<button id="submit-button" type='submit' class="button">Войти</button>
						<a asp-controller="Account" asp-action="Register" method="get" asp-route-returnUrl="@Model.ReturnUrl" class="button1">Нет аккаунта?</a>
					</div>
				</form>
			</div>
		</div>
	</body>

</html>